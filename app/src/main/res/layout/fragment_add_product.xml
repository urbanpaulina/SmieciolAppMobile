<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"
                tools:context=".Fragments.AddProduct">

    <EditText
        android:id="@+id/etName"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Nazwa"
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/border_for_textview"/>

    <TextView
        android:id="@+id/txtWeight"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_Name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="179dp"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned"
        android:text="Waga (kg)"
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/border_for_textview"/>

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:inputType="numberDecimal|numberSigned"
        android:padding="10dp"
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/scanProd"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="179dp"
        android:background="@drawable/border_for_textview"
        android:gravity="center"
        android:text="Kategoria"
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/scanProd"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtWeight"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/smieciolGreen"
        android:text="Kod kreskowy"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/barcodeExist"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etWeight"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:focusable="false"
        android:inputType="numberDecimal|numberSigned"
        android:padding="10dp"
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="12dp"
        android:text="Dodaj produkt"
        android:textColor="@color/darkGray"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/barcodeExist"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="37dp"
        android:backgroundTint="@color/smieciolGreen"
        android:text="Dodaj"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/spCategory"
        android:layout_width="188dp"
        android:layout_height="226dp"
        android:layout_below="@+id/txtCategory"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="215dp"
        android:background="@drawable/border_for_textview" />

    <EditText
        android:id="@+id/etCategory"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/barcodeExist"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:focusable="false" />

</RelativeLayout>
